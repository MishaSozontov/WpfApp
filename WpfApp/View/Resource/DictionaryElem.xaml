<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="group" TargetType="GroupBox">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource Base.Medium}"/>
    </Style>

    <Style x:Key="btn" TargetType="Button">
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource Base.Dark}"/>
        <Setter Property="Background" Value="{StaticResource Base.Light}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
</ResourceDictionary>